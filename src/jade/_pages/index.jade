
extends ../docwrapper

block title
    |Мобильные телефоны

//- block headertext
//-     |Try to do something usefull

block content  
    .content-wrapper
        .container
            h2.name-page
                block title
            .main-content
                include ../_parts/sidebar

                .content
                    //- header.main__header
                        label.main__header-name 
                            |Сортировать по
                        select.filter__select
                            option(value="price")
                                //- .filter__select__option 
                                |по цене
                            option(value="rating")
                                //- .filter__select__option 
                                |по популярности  

                        .view-catalog__list
                            span.view__title
                                |Вид каталога
                            +nav(' view', [ '', '', ''], 0) 
                    
                    .sort
                        .sort__left
                            .sort__select-wrap
                                label.sort-title
                                    |Сортировать по
                                .sort__select
                                    select.sort__select-elem
                                        - var options = ["по цене", "по популярности"]
                                        each option in options
                                            option(value="")= option

                        .sort__right
                            .sort__title
                                |Вид каталога
                            .sort__view
                                ul.sort__view-list
                                    - var items = ['rows', 'grids', 'lines']
                                    each item in items
                                        li(class="sort__view-item sort__view-" + item data-view=item)
                                            a(href="#").sort__view-link
                                                .sort__view-icon 

                    include ../_parts/cards-products 
                    include ../_parts/pagination

        include ../_parts/info